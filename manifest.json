{
  "manifest_version": 3,
  "name": "Project Aegis",
  "version": "1.0.0",
  "description": "Intercepts and secures AI conversation streams against server-side deletion.",
  "permissions": [
    "debugger",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Aegis Vault"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.jsx"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}